{
  "name": "nodemigo",
  "version": "1.1.1",
  "description": "A friendly set of utilities for working with Express.",
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "mocha",
    "build": "babel --presets es2015,stage-0 -d lib/ src/",
    "prepublish": "npm run build",
    "docs": "doctoc ."
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ptshih/nodemigo.git"
  },
  "bugs": {
    "url": "https://github.com/ptshih/nodemigo/issues"
  },
  "homepage": "https://github.com/ptshih/nodemigo",
  "keywords": [
    "express",
    "router",
    "model",
    "controller",
    "mongoose",
    "mongodb",
    "orm"
  ],
  "author": {
    "name": "Peter Shih",
    "email": "ptshih@gmail.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "express": "^4.x.x"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "lodash": "^4.16.2",
    "nconf": "^0.8.4",
    "pretty-error": "^2.0.1",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-datetime": "^1.4.1",
    "doctoc": "^1.2.0",
    "eslint": "^3.7.0",
    "eslint-config-airbnb-base": "^8.0.0",
    "eslint-plugin-import": "^1.16.0",
    "express": "^4.14.0",
    "mocha": "^3.1.0",
    "sinon": "^1.17.6",
    "sinon-as-promised": "^4.0.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "globals": {
      "__DEV__": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "class-methods-use-this": "off",
      "import/no-unresolved": 1,
      "max-len": 1,
      "arrow-body-style": [
        "warn",
        "as-needed"
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-confusing-arrow": 0,
      "no-unused-vars": 1
    }
  }
}
