{
  "name": "nodemigo",
  "version": "2.1.3",
  "description": "A friendly set of utilities for working with Express.",
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "mocha",
    "build": "babel --presets es2015,stage-0 -d lib/ src/",
    "prepublish": "npm run build",
    "docs": "doctoc ."
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ptshih/nodemigo.git"
  },
  "bugs": {
    "url": "https://github.com/ptshih/nodemigo/issues"
  },
  "homepage": "https://github.com/ptshih/nodemigo",
  "keywords": [
    "express",
    "router",
    "model",
    "controller"
  ],
  "author": {
    "name": "Peter Shih",
    "email": "ptshih@gmail.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "express": "^4.x.x"
  },
  "dependencies": {
    "bluebird": "^3.4.7",
    "helmet": "^3.4.0",
    "ipaddr.js": "^1.2.0",
    "lodash": "^4.17.4",
    "nconf": "^0.8.4",
    "on-finished": "^2.3.0",
    "pretty-error": "^2.0.2",
    "response-time": "^2.3.2",
    "uuid": "^3.0.1",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-datetime": "^1.4.1",
    "doctoc": "^1.2.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "express": "^4.14.1",
    "mocha": "^3.2.0",
    "sinon": "^1.17.7",
    "sinon-as-promised": "^4.0.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "globals": {
      "__DEV__": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "class-methods-use-this": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ],
      "import/no-unresolved": 1,
      "max-len": 1,
      "arrow-body-style": [
        "warn",
        "as-needed"
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-confusing-arrow": 0,
      "no-unused-vars": 1,
      "no-useless-escape": 0
    }
  }
}
