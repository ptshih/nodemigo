{
  "name": "nodemigo",
  "version": "1.0.6",
  "description": "A friendly set of utilities for working with Express.",
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "mocha",
    "build": "babel --presets es2015,stage-0 -d lib/ src/",
    "prepublish": "npm run build",
    "docs": "doctoc ."
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ptshih/nodemigo.git"
  },
  "bugs": {
    "url": "https://github.com/ptshih/nodemigo/issues"
  },
  "homepage": "https://github.com/ptshih/nodemigo",
  "keywords": [
    "express",
    "router",
    "model",
    "controller",
    "mongoose",
    "mongodb",
    "orm"
  ],
  "author": {
    "name": "Peter Shih",
    "email": "ptshih@gmail.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "express": "^4.x.x"
  },
  "dependencies": {
    "bluebird": "^3.4.1",
    "lodash": "^4.14.0",
    "nconf": "^0.8.4",
    "pretty-error": "^2.0.0",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "chai-datetime": "^1.4.1",
    "doctoc": "^1.2.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.11.0",
    "eslint-plugin-jsx-a11y": "^1.5.5",
    "eslint-plugin-react": "^5.2.2",
    "express": "^4.14.0",
    "eyes": "git://github.com/ptshih/eyes.js.git",
    "mocha": "^2.5.3",
    "sinon": "^1.17.4",
    "sinon-as-promised": "^4.0.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "globals": {
      "__DEV__": true
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "import/no-unresolved": 1,
      "max-len": 1,
      "arrow-body-style": [
        "warn",
        "as-needed"
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-confusing-arrow": 0,
      "no-unused-vars": 1,
      "react/jsx-quotes": 0,
      "react/prefer-stateless-function": 1,
      "jsx-quotes": [
        2,
        "prefer-double"
      ]
    }
  }
}
